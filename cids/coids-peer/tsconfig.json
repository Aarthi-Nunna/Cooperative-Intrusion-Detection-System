{
   "extends":"@tsconfig/node14/tsconfig.json",
   "compilerOptions": {
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "outDir": "dist",
        "module": "es2022",
        "target": "es2022",
       "moduleResolution": "node",
       "declaration": true,
       "sourceMap": true,
       "noImplicitAny": true,
       "skipLibCheck": true
   },
   "include": [
       "./src/**/*"
   ],
   "exclude": [
       "./src/**/*.spec.ts"
   ]
}
